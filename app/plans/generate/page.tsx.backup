"use client"

import { useState } from "react"
import { useRouter } from "next/navigation"
import Link from "next/link"

export default function GeneratePlanPage() {
  const router = useRouter()
  const [daysPerWeek, setDaysPerWeek] = useState(4)
  const [duration, setDuration] = useState(12)
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState("")
  const [generatedPlan, setGeneratedPlan] = useState<any>(null)

  const handleGenerate = async () => {
    setLoading(true)
    setError("")

    try {
      const response = await fetch("/api/plans/generate", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          daysPerWeek,
          duration,
        }),
      })

      const data = await response.json()

      if (!response.ok) {
        throw new Error(data.error || "Failed to generate plan")
      }

      setGeneratedPlan(data.plan)
    } catch (err: any) {
      setError(err.message || "Something went wrong")
    } finally {
      setLoading(false)
    }
  }

  if (generatedPlan) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-iron-950 via-iron-900 to-iron-800">
        <nav className="bg-iron-900 border-b border-iron-700 p-4">
          <div className="container mx-auto">
            <Link href="/dashboard" className="text-white hover:text-iron-300">
              ‚Üê Back to Dashboard
            </Link>
          </div>
        </nav>

        <div className="container mx-auto px-4 py-8">
          <div className="max-w-4xl mx-auto">
            <div className="bg-iron-800 rounded-lg p-8 border border-iron-700 mb-6">
              <h1 className="text-3xl font-bold text-white mb-2">
                {generatedPlan.name}
              </h1>
              <p className="text-iron-300 mb-4">{generatedPlan.description}</p>
              <div className="flex gap-4 text-sm text-iron-400">
                <span>üìÖ {generatedPlan.duration} weeks</span>
                <span>üèãÔ∏è {generatedPlan.daysPerWeek} days/week</span>
                <span>üéØ {generatedPlan.goal}</span>
              </div>
            </div>

            {/* Workout Days */}
            <div className="space-y-6">
              {generatedPlan.workouts.map((workout: any, index: number) => (
                <div
                  key={index}
                  className="bg-iron-800 rounded-lg p-6 border border-iron-700"
                >
                  <h2 className="text-2xl font-bold text-white mb-2">
                    Day {workout.day}: {workout.name}
                  </h2>
                  <p className="text-iron-300 mb-4">Focus: {workout.focus}</p>

                  <div className="space-y-4">
                    {workout.exercises.map((exercise: any, exIndex: number) => (
                      <div
                        key={exIndex}
                        className="bg-iron-900 p-4 rounded-lg border border-iron-700"
                      >
                        <div className="flex justify-between items-start mb-2">
                          <h3 className="font-semibold text-white text-lg">
                            {exIndex + 1}. {exercise.name}
                          </h3>
                          <span className="text-iron-400 text-sm">
                            {exercise.machine}
                          </span>
                        </div>

                        <div className="grid grid-cols-3 gap-4 mb-2">
                          <div className="text-iron-300">
                            <span className="font-medium text-white">Sets:</span>{" "}
                            {exercise.sets}
                          </div>
                          <div className="text-iron-300">
                            <span className="font-medium text-white">Reps:</span>{" "}
                            {exercise.reps}
                          </div>
                          <div className="text-iron-300">
                            <span className="font-medium text-white">Rest:</span>{" "}
                            {exercise.rest}
                          </div>
                        </div>

                        {exercise.notes && (
                          <p className="text-sm text-iron-400 italic">
                            üí° {exercise.notes}
                          </p>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>

            {/* Tips Section */}
            {generatedPlan.tips && generatedPlan.tips.length > 0 && (
              <div className="bg-iron-800 rounded-lg p-6 border border-iron-700 mt-6">
                <h2 className="text-xl font-bold text-white mb-4">
                  üí™ Training Tips
                </h2>
                <ul className="space-y-2">
                  {generatedPlan.tips.map((tip: string, index: number) => (
                    <li key={index} className="text-iron-300">
                      ‚Ä¢ {tip}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {generatedPlan.nutritionTips &&
              generatedPlan.nutritionTips.length > 0 && (
                <div className="bg-iron-800 rounded-lg p-6 border border-iron-700 mt-6">
                  <h2 className="text-xl font-bold text-white mb-4">
                    üçΩÔ∏è Nutrition Tips
                  </h2>
                  <ul className="space-y-2">
                    {generatedPlan.nutritionTips.map((tip: string, index: number) => (
                      <li key={index} className="text-iron-300">
                        ‚Ä¢ {tip}
                      </li>
                    ))}
                  </ul>
                </div>
              )}

            <div className="mt-8 flex gap-4">
              <button
                onClick={() => router.push("/dashboard")}
                className="flex-1 bg-white text-iron-900 py-3 rounded-lg font-semibold hover:bg-iron-100"
              >
                Start This Plan
              </button>
              <button
                onClick={() => setGeneratedPlan(null)}
                className="flex-1 bg-iron-700 text-white py-3 rounded-lg font-semibold hover:bg-iron-600"
              >
                Generate Another Plan
              </button>
            </div>
          </div>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-iron-950 via-iron-900 to-iron-800">
      <nav className="bg-iron-900 border-b border-iron-700 p-4">
        <div className="container mx-auto">
          <Link href="/dashboard" className="text-white hover:text-iron-300">
            ‚Üê Back to Dashboard
          </Link>
        </div>
      </nav>

      <div className="container mx-auto px-4 py-12">
        <div className="max-w-2xl mx-auto">
          <div className="text-center mb-8">
            <h1 className="text-4xl font-bold text-white mb-4">
              ü§ñ Generate AI Workout Plan
            </h1>
            <p className="text-iron-300">
              Let AI create a personalized workout plan based on your goals
            </p>
          </div>

          <div className="bg-iron-800 rounded-lg p-8 border border-iron-700">
            {error && (
              <div className="bg-red-500/10 border border-red-500 text-red-400 px-4 py-3 rounded mb-6">
                {error}
              </div>
            )}

            <div className="space-y-6">
              <div>
                <label className="block text-sm font-medium text-iron-200 mb-2">
                  How many days per week can you train?
                </label>
                <div className="grid grid-cols-7 gap-2">
                  {[1, 2, 3, 4, 5, 6, 7].map((days) => (
                    <button
                      key={days}
                      onClick={() => setDaysPerWeek(days)}
                      className={`p-3 rounded-lg font-semibold transition ${
                        daysPerWeek === days
                          ? "bg-white text-iron-900"
                          : "bg-iron-700 text-white hover:bg-iron-600"
                      }`}
                    >
                      {days}
                    </button>
                  ))}
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-iron-200 mb-2">
                  Program Duration (weeks)
                </label>
                <select
                  value={duration}
                  onChange={(e) => setDuration(parseInt(e.target.value))}
                  className="w-full px-4 py-3 bg-iron-900 border border-iron-700 rounded-lg text-white focus:outline-none focus:border-iron-500"
                >
                  <option value={4}>4 weeks (1 month)</option>
                  <option value={8}>8 weeks (2 months)</option>
                  <option value={12}>12 weeks (3 months)</option>
                  <option value={16}>16 weeks (4 months)</option>
                  <option value={24}>24 weeks (6 months)</option>
                </select>
              </div>

              <div className="bg-iron-900 p-4 rounded-lg border border-iron-700">
                <h3 className="font-semibold text-white mb-2">
                  Plan will be based on:
                </h3>
                <ul className="text-iron-300 space-y-1 text-sm">
                  <li>‚úì Your fitness goal (from profile)</li>
                  <li>‚úì Your experience level</li>
                  <li>‚úì {daysPerWeek} training days per week</li>
                  <li>‚úì {duration} week program</li>
                </ul>
              </div>

              <button
                onClick={handleGenerate}
                disabled={loading}
                className="w-full bg-white text-iron-900 py-4 rounded-lg font-semibold hover:bg-iron-100 transition disabled:opacity-50 disabled:cursor-not-allowed text-lg"
              >
                {loading ? (
                  <span className="flex items-center justify-center gap-2">
                    <span className="animate-spin">‚öôÔ∏è</span>
                    Generating your personalized plan...
                  </span>
                ) : (
                  "ü§ñ Generate My Workout Plan"
                )}
              </button>

              {loading && (
                <p className="text-center text-iron-400 text-sm">
                  This may take 10-20 seconds...
                </p>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}
